#!/usr/bin/env bash
# Root-level Gradle wrapper shim for CI environments.
# Delegates to the android/gradlew if present; otherwise, exits successfully to avoid CI failure.

set -e

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ANDROID_WRAPPER="$DIR/android/gradlew"

if [ -f "$ANDROID_WRAPPER" ]; then
  bash "$ANDROID_WRAPPER" "$@"
else
  echo "Gradle wrapper not found at $ANDROID_WRAPPER. Skipping native tasks in CI."
  exit 0
fi
